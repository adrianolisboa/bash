# vim: ft=sh sw=2 ts=2 expandtab

# turn xv on/off
xv() { case $- in *[xv]*) set +xv;; *) set -xv ;; esac }

# simple aliases
alias fv='vim ${HOME}/.vim/vimrc'
alias vd='cd ${HOME}/.vim/'
alias projects='cd ${HOME}/Projects'
alias tm='tmux'

# Verify if Brazilian League of Legendes server is online
alias pinglol="ping 8.23.24.100"

# atom aliases
alias asp='apm list --installed --bare > ~/.atom/package.list'

# git aliases
alias gst='git status -s -b'
alias gl='git pull'
alias glr='git pull --rebase'
alias gp='git push'
alias gpp='git push --set-upstream origin master'
alias gd='git diff'
alias gs='git show'
alias gau='git add --update'
alias ga='git add -p' 
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gb='git branch'
alias gba='git branch -a'
alias gco='git checkout'
alias gcob='git checkout -b'
alias gcot='git checkout -t'
alias glog='git log'
alias glogp='git log --pretty=format:"%h %s" --graph'
alias gua='git-update-all'
alias gbam='delete_local_merged_branches'
alias gbamr='delete_remote_merged_branches'

 # docker aliases
dalias() { alias | grep 'docker' | sed "s/^\([^=]*\)=\(.*\)/\1 => \2/"| sed "s/['|\']//g" | sort; } # list all docker alias
alias db="docker build"
alias di="docker images"
alias dps="docker ps"
alias dpl="docker ps -l -q"
alias dip="docker inspect --format '{{ .NetworkSettings.IPAddress }}'"
alias dstop='function _dstop() { docker stop $(docker ps -a -q); };_dstop'
alias drm='function _drm() { docker rm $(docker ps -a -q); };_drm'
alias dri='function _dri() { docker rmi $(docker images -q); };_dri'
alias dbash='function _dbash() { docker exec -it $(docker ps -aqf "name=$1") bash; };_dbash'

# terraform
alias tf="terraform"
alias tfi="terraform init"
alias tfv="terraform validate"
alias tfp="terraform plan"
alias tfa="terraform apply"
alias tfd="terraform destroy"
alias tfs="terraform show"
