# vim: ft=sh sw=2 ts=2 expandtab

# Local repositories should be defined here
alias vimdir='cd ${HOME}/.vim/' # https://github.com/adrianolisboa/vim
alias envdir='cd ${HOME}/.env-setup' # https://github.com/adrianolisboa/env-setup
alias bashdir='cd ${BASH_LOAD_ROOT}' # Those files

function update_machine() {
    vimdir && git pull && vim +PackClean +PackUpdate +q # Update vim repository and install new plugins (if exists)
    bashdir && git pull # Update bash repository and source files
    source ${HOME}/.bash_profile
    cd
    print_jobs_done
}

function update_osx() {
    update_machine
    envdir && git pull && cd setup-osx && confirm 'Do you want to update brew dependencies?' && brew update && brew bundle # Update environment setup
    cd
    print_jobs_done
}

function print_jobs_done() {
    echo "Jobs Done!"
}

alias uma='update_machine' # This only updates essential
alias uos='update_osx'     # Updates essentials also brew files
